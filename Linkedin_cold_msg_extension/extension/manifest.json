{
  "manifest_version": 3,
  "name": "LinkedIn Note Copilot",
  "version": "0.1.0",
  "description": "Draft connection notes on LinkedIn profile pages.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.linkedin.com/in/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
